<head>
  <meta charset="utf-8">
	<meta http-equiv="refresh" content="5">
  <title>Demo</title>
</head>

<h2>Monitored Sites</h2>

<table class="zebra-striped">
  <tr>
    <th>Url</th>
    <th>Interval</th>
    <th>Active</th>
    <th>Status</th>
    <th>Delay</th>
    <th>Content</th>
    <th>Watcher</th>
	<th>Last Checked</th>
	<th>Next Check</th>
	<th>ID:</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sites.each do |site| %>
  <tr>
    <td><%= site.url %></td>
    <td><%= site.interval %></td>
    <td><%= site.active %></td>
    <td><span class="label <%= server_state_color(site.status) %>"><%= site.status %></span></td>
    <td><%= number_with_precision(site.delay, :precision => 5 ) %></td>
    <td><%= site.content %></td>
    <td><%= site.watcher %></td>
	<td><%= site.last_checked.strftime("%H:%M %p") %></td>
	<td><%= site.next_check.strftime("%H:%M %p") %></td>
	<td><%= site.id %></td>
    <td><%= link_to 'Show', site %></td>
    <td><%= link_to 'Edit', edit_site_path(site) %></td>
    <td><%= link_to 'Destroy', site, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Site', new_site_path %>
